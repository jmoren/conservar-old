<%= form_for [:admin,@user], :validate => true do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname %>
  </p>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "Email" %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :role %>
    <%= f.select :role, ApplicationHelper::ROLES %>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirmar contrasenia" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit %> or <%= link_to 'Cancelar', admin_users_path %></p>
<% end %>


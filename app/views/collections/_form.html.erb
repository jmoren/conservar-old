<div class="form" id="collection_form">
  <%= form_for @collection, :validate => true do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description, :rows => 5 %>
    </p>
    <p><%= f.submit %> o <%= link_to 'Cancelar', @collection.new_record? ? collections_path : @collection  %></p>
  <% end %>
</div>


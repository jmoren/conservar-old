<!DOCTYPE html>
<html>
  <head>
    <title>conserv.ar</title>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <link href="/stylesheets/jquery-ui-1.8.13.custom.css" type="text/css" rel ="stylesheet" media ="screen"/>
    <%= javascript_include_tag :defaults,'rails.validations','jquery.editinplace','fileuploader','jquery.qtip' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="header">
      <header  style="width:94%;margin: 0 auto -10px auto">
        <%= link_to image_tag('logo.png'), root_url%>
        <div class="clear"></div>
        <% if current_user %>
        <div id="main_menu">
          <ul>
            <li><%= link_to('Objetos', items_path)  %></li>
            <li><%= link_to('Reportes', reports_path)  %></li>
            <li><%= link_to('Galerias', galleries_path)  %></li>
            <li><%= link_to('Tareas', tasks_path)  %></li>
            <li><%= link_to('Colecciones', collections_path)  %></li>
            <li><%= link_to('Calendario', events_path)  %></li>
            <% if current_user && current_user.admin? %>
              <li><%= link_to 'Admin', admin_path %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      </header>
      <div class="clear"></div>
      <section id="messages" style="width:94%">
        <div style="float:left;font-weight:bold;font-size:20px">
          <%= yield(:title) if show_title? %>
        </div>
        <span style="float:right;">
          <% if current_user %>
            <%= current_user.full_name %>
            <% current_user.role %>
            <br>
            <nav style="font-size:11px;margin: 5px 0 5px 10px">
              <%= link_to_unless_current 'Perfil', edit_user_path(current_user) %>
              -
              <%= link_to 'Salir', logout_path %>
            </nav>
          <% end %>
        </span>
        <div>
          <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, :id => "flash_#{name}",:class => "flash" %>
          <% end %>
        </div>
        <div class="clear"></div>
      </section>
    </div>
    <section id="content">
      <%= yield %>
    </section>
    <section id="footer">
    </section>
  </body>
</html>


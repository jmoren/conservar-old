<!DOCTYPE html>
<html>
  <head>
    <title>conserv.ar</title>
    <%= stylesheet_link_tag "application"%>
    <link href="/stylesheets/jquery-ui-1.8.13.custom.css" type="text/css" rel ="stylesheet" media ="screen"/>
    <!--<link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Ubuntu:regular,bold&subset=Latin">-->
    <%= javascript_include_tag :defaults,'rails.validations','jquery.editinplace','fileuploader','jquery.qtip' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
    <script>
      $(function(){
        $('.close_flash').live('click',function(){
          $('.flash').html('').fadeOut('slow');
          return false;
        });
        $(".with_vcard").hover(function(){
          card = $(this).find('#vcard');
          card.fadeIn('slow'); //Show tooltip
        }, function() {
          card.fadeOut('slow'); //Hide tooltip
        })
      });
    </script>
  </head>
  <body>
    <div id="header">
      <div id="logo_img">
          <%= link_to image_tag('logo.png'), root_url%>
      </div>
      <% if current_user %>
      <div id="menu_bar">
        <ul>
          <li><%= link_to("Objetos", items_path)  %></li>
          <li><%= link_to('Reportes', reports_path)  %></li>
          <li><%= link_to('Galerias', galleries_path)  %></li>
          <li><%= link_to('Tareas', tasks_path)  %></li>
          <li><%= link_to('Colecciones', collections_path)  %></li>
          <li><%= link_to('Calendario', events_path)  %></li>
          <% if current_user && current_user.admin? %>
            <li><%= link_to 'Admin', admin_path %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <div class="clear"></div>
      <div id="sub_header">
        <div id="title">
          <%= yield(:title) if show_title? %>
        </div>
        <div id="user_menu" class="with_vcard">
          <div class="vcard-left" id="vcard" style="display:none">
            <div class="vcard-in-left">
              <div>Usuario: <%= current_user.full_name %></div>
              <div>Roles: <%= current_user.role %></div>
              <div>Email: <%= current_user.email %></div>
            </div>
          </div>
          <% if current_user %>
            <div id="user_info">
              Usuario: <%= current_user.username %>
            </div>
            <div id="user_sub_menu">
              <%= link_to_unless_current 'Perfil', edit_user_path(current_user) %>
              -
              <%= link_to 'Salir', logout_path %>
            </div>
          <% end %>
        </div>
        <div id="flash_messages">
          <% flash.each do |name, msg| %>
            <%=raw content_tag :div, content_tag(:span,msg) + content_tag(:a,'x',:href =>"#",:class=> 'close_flash', :style => 'margin-left:10px'), :id => "flash_#{name}",:class => "flash" %>
          <% end %>
        </div>
      </div>
      <div class="clear"></div>
    </div>
    <hr>
    <div id="content">
      <%= yield %>
    </div>
    <div class="clear"></div>
    <div id="footer">
       Conservar Â© 2011 - Jorge Moreno
    </div>
  </body>
</html>


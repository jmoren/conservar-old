<!DOCTYPE html>
<html>
  <head>
    <title>conserv.ar</title>
    <%= stylesheet_link_tag "application" %>
    <link href="/stylesheets/jquery-ui-1.8.13.custom.css" type="text/css" rel ="stylesheet" media ="screen"/>
    <%= javascript_include_tag :defaults,'rails.validations','jquery.editinplace','fileuploader' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <section style="width:90%;margin:auto">
    <header>
      <%= link_to image_tag('logo.png'), root_url%>
    </header>
    <% if current_user %>
      <section>
        <nav>
          <ul>
            <li><%= link_to('Reportes', reports_path)  %></li>
            <li><%= link_to('Galerias', galleries_path)  %></li>
            <li><%= link_to('Tareas', tasks_path)  %></li>
          </ul>
        </nav>
      </section>
    <% end %>
    </section>
    <section id="messages" style="width:90%">
      <span style="float:right;">
        <% if current_user %>
          <%= current_user.full_name %>
          <% current_user.role %>
          <br>
          <nav style="font-size:12px">
            <% if current_user && current_user.admin? %>
              <%= link_to_unless_current 'Admin', admin_path %>
            <% end %>
            <%= link_to_unless_current 'Perfil', edit_current_user_path %>
            <%= link_to 'Salir', logout_path %>
          </nav>
        <% end %>
      </span>
      <span style="float:left;font-weight:bold;font-size:20px">
        <%= yield(:title) if show_title? %>
      </span>
      <div class="clear"></div>
    </section>

    <section style="width:95%;margin:auto">
    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}",:class => "flash" %>
      <% end %>
    </section>
    <section id="content">
      <%= yield %>
    </section>
    <section id="footer">
    </section>
  </body>
</html>


<%= form_for @event do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :activity %><br />
    <%= f.text_area :activity %>
  </p>
  <p>
    <%= f.label :start_at %><br />
    <%= f.datetime_select :start_at %>
  </p>
  <p>
    <%= f.label :end_at %><br />
    <%= f.datetime_select :end_at %>
  </p>
  <p>
    <%= f.check_box :all_day %>
    <%= f.label :all_day, "Todo el dia?" %>
  </p>
  <p><%= f.submit %></p>
<% end %>


<% title Event.model_name.human %>
<div id="event">
  <div class="right">
    <div class="button"><%= link_to t('helpers.links.edit'), edit_event_path(@event) %></div>
    <div class="button"><%= link_to t('helpers.links.delete'), @event, :confirm => 'Are you sure?', :method => :delete %></div>
    <div class="button"><%= link_to t('helpers.links.all'), events_path %></div>
  </div>
  <div class="clear"></div>
  <div class="col_left left">
    <p>
      <div class="label"><strong>Creado por:</strong></div>
      <%= @event.user.full_name %>
    </p>
    <p>
      <div class="label"><strong><%= Event.human_attribute_name(:title)%>:</strong></div>
      <%= @event.title %>
    </p>
    <% if !@event.report_id.nil?%>
      <p>
        <div class="label"><strong> Reporte:</strong></div> <%= link_to @report.code, @report  %>
      </p>
    <% end %>
  </div>
  <div class="col_left left">
    <p>
      <div class="label"><strong>Inicio: </strong></div>
      <%= l @event.start_at, :format => :long %>
    </p>
    <p>
      <div class="label"><strong>Finaliza: </strong></div>
      <%= l @event.end_at, :format => :long %>
    </p>
  </div>
  <div class="clear"></div>
  <p>
    <div class="label"><strong><%= Event.human_attribute_name(:activity)%>:</strong></div>
    <br>
    <%= simple_format @event.activity, :class => "text_area" %>
  </p>
</div>

